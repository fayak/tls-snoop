#!/bin/sh
set -e

case "$1" in
    purge)
        # Remove state and cache directories on purge
        rm -rf /var/lib/tls-snoop
        rm -rf /var/cache/tls-snoop
        # Note: logs in /var/log/tls-snoop are preserved
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
esac

# Reload systemd
systemctl daemon-reload || true

#DEBHELPER#

exit 0
